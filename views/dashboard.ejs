body {overflow: hidden}
</style>
	<% if ( avatarURL !== null ) { %>
		<div id="avatarCanvas" style="position:absolute; height: 150%; width: 150%; z-index: -1; left: -25%; top: -35%;"></div>
		<div class="row mt-4">
			<div class="col-md-6 m-auto">
				<div class="card card-body text-center">
					<h1 class= "text-center"><small>Welcome</small> <strong><%= name %></strong></h1>
					<div class="container" id="joinChatButtonsContainer">
						<div class="row">
							<div class="col-sm d-flex justify-content-center">
								<a href="#" data-toggle="modal" data-target="#createChatModal" class="btn btn-lg btn-primary btn-block">Create chat</a>
							</div>
							<div class="col-sm d-flex justify-content-center">
								<a href="#" data-toggle="modal" data-target="#joinChatModal" class="btn btn-lg btn-light btn-block">Join chat</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% } else { %>
	<div class="row mt-5">
		<div class="col-md-6 m-auto">
			<div class="card card-body text-center">
				<p>To begin using this site, you must first create your avatar</p>
				<a href="/users/avatar" class="btn btn-primary btn-block mb-2">Create avatar</a>
			</div>
		</div>
	</div>
	<% } %>

