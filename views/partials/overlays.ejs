<div class="modal" id="joinChatModal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Join a chat in progress</h5>
			</div>
			<div class="modal-body">
				<form action="/joinChat" method="POST">
					<div class="form-group">
						<label for="url">Enter URL or Chat ID:</label>
						<input
							type="text"
							id="url"
							name="url"
							class="form-control"
							placeholder="e.g. https://chathere.ie/chat/12345 or 12345"
						/>
					</div>
					<button type="submit" class="btn btn-primary btn-block">Join</button>
				</form>
			</div>
		</div>
	</div>
</div>

<div class="modal" id="createChatModal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Create a new chat</h5>
			</div>
			<div class="modal-body">
				<form action="/createChat" method="POST">
					<button type="submit" class="btn btn-primary btn-block">Create</button>
				</form>
			</div>
		</div>
	</div>
</div>
