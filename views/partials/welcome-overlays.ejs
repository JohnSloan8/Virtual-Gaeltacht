<div class="modal" id="loginModal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title celtic celtic-h3">Log in</h5>
			</div>
			<div class="modal-body">
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label class="celtic celtic-p" for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              required
            />
          </div>
          <div class="form-group">
            <label class="celtic celtic-p" for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
              required
            />
          </div>
          <button type="submit" class="btn btn-success btn-block celtic celtic-small-p"><strong>Log in</strong></button>
        </form>
			</div>
		</div>
	</div>
</div>

<div class="modal" id="registerModal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title celtic celtic-h1">Register</h5>
			</div>
			<div class="modal-body">
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label class="celtic celtic-p" for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
              required
            />
          </div>
          <div class="form-group">
            <label class="celtic celtic-p" for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
              required
            />
          </div>
          <div class="form-group">
            <label class="celtic celtic-p" for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
              required
            />
          </div>
          <div class="form-group">
            <label class="celtic celtic-p" for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              required
            />
          </div>
          <button type="submit" class="btn btn-info btn-block">
            Register
          </button>
        </form>
      </div>
		</div>
	</div>
</div>

